@tailwind base;
@tailwind components;
@tailwind utilities;

/* Professional Dashboard Base Styles */
@layer base {
  html {
    font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    scroll-behavior: smooth;
  }
  
  body {
    @apply bg-gray-50 text-gray-900 antialiased;
    font-feature-settings: 'cv03', 'cv04', 'cv11';
  }
  
  * {
    @apply border-gray-200;
  }
  
  h1, h2, h3, h4, h5, h6 {
    @apply font-semibold tracking-tight;
  }
  
  button:focus,
  input:focus,
  select:focus,
  textarea:focus {
    @apply outline-none ring-2 ring-blue-500 ring-offset-2;
  }
}

@layer components {
  /* Professional Button Components */
  .btn-primary {
    @apply bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl disabled:opacity-50 disabled:cursor-not-allowed transform hover:scale-105 active:scale-95;
  }
  
  .btn-secondary {
    @apply bg-gray-600 hover:bg-gray-700 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-200 shadow-md hover:shadow-lg transform hover:scale-105 active:scale-95;
  }
  
  .btn-outline {
    @apply border-2 border-blue-600 text-blue-600 hover:bg-blue-600 hover:text-white font-semibold py-3 px-6 rounded-lg transition-all duration-200 transform hover:scale-105 active:scale-95;
  }
  
  .btn-danger {
    @apply bg-red-600 hover:bg-red-700 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-200 shadow-md hover:shadow-lg transform hover:scale-105 active:scale-95;
  }
  
  .btn-small {
    @apply py-2 px-4 text-sm;
  }
  
  .btn-large {
    @apply py-4 px-8 text-lg;
  }
  
  /* Professional Card Components */
  .card {
    @apply bg-white rounded-xl shadow-professional border border-gray-100 overflow-hidden transition-all duration-200 hover:shadow-professional-lg;
  }
  
  .card-elevated {
    @apply shadow-professional-lg hover:shadow-professional-xl;
  }
  
  .card-header {
    @apply p-6 border-b border-gray-100 bg-gray-50;
  }
  
  .card-body {
    @apply p-6;
  }
  
  .card-footer {
    @apply p-6 border-t border-gray-100 bg-gray-50;
  }
  
  /* Professional Form Components */
  .form-group {
    @apply space-y-2;
  }
  
  .form-label {
    @apply block text-sm font-medium text-gray-700;
  }
  
  .form-input {
    @apply w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 bg-white placeholder-gray-400;
  }
  
  .form-input-error {
    @apply border-red-300 focus:ring-red-500 focus:border-red-500;
  }
  
  .form-select {
    @apply w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 bg-white;
  }
  
  .form-textarea {
    @apply w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 bg-white placeholder-gray-400 resize-vertical min-h-[100px];
  }
  
  .form-error {
    @apply text-sm text-red-600 mt-1;
  }
  
  .form-help {
    @apply text-sm text-gray-500 mt-1;
  }
  
  /* Professional Navigation Components */
  .sidebar {
    @apply w-64 bg-white shadow-professional-xl border-r border-gray-100 flex flex-col;
  }
  
  .sidebar-header {
    @apply p-6 border-b border-gray-100;
  }
  
  .sidebar-nav {
    @apply flex-1 p-4 space-y-2;
  }
  
  .sidebar-footer {
    @apply p-4 border-t border-gray-100;
  }
  
  .nav-item {
    @apply w-full text-left px-4 py-3 rounded-lg transition-all duration-200 flex items-center space-x-3 group;
  }
  
  .nav-item-active {
    @apply bg-gradient-to-r from-blue-600 to-purple-600 text-white shadow-lg transform scale-105;
  }
  
  .nav-item-inactive {
    @apply text-gray-700 hover:bg-gray-100 hover:text-gray-900 hover:transform hover:scale-105;
  }
  
  .nav-icon {
    @apply text-lg flex-shrink-0;
  }
  
  .nav-text {
    @apply font-medium;
  }
  
  .nav-description {
    @apply text-xs opacity-75;
  }
  
  /* Professional Progress Components */
  .progress-container {
    @apply w-full bg-gray-200 rounded-full h-3 overflow-hidden;
  }
  
  .progress-bar {
    @apply h-full bg-gradient-to-r from-blue-500 to-purple-500 rounded-full transition-all duration-500 ease-out relative overflow-hidden;
  }
  
  .progress-bar::before {
    content: '';
    @apply absolute inset-0 bg-gradient-to-r from-transparent via-white to-transparent opacity-30 animate-pulse;
  }
  
  .progress-ring {
    @apply relative inline-flex items-center justify-center;
  }
  
  /* Professional Status Components */
  .status-badge {
    @apply inline-flex items-center px-3 py-1 rounded-full text-xs font-medium border;
  }
  
  .status-excellent {
    @apply bg-green-50 text-green-800 border-green-200;
  }
  
  .status-very-good {
    @apply bg-green-50 text-green-700 border-green-200;
  }
  
  .status-good {
    @apply bg-blue-50 text-blue-800 border-blue-200;
  }
  
  .status-fair {
    @apply bg-yellow-50 text-yellow-800 border-yellow-200;
  }
  
  .status-poor {
    @apply bg-red-50 text-red-800 border-red-200;
  }
  
  .status-active {
    @apply bg-green-50 text-green-800 border-green-200;
  }
  
  .status-inactive {
    @apply bg-gray-50 text-gray-800 border-gray-200;
  }
  
  .status-pending {
    @apply bg-yellow-50 text-yellow-800 border-yellow-200;
  }
  
  /* Professional Stats Components */
  .stat-card {
    @apply bg-white rounded-lg p-6 shadow-professional border border-gray-100;
  }
  
  .stat-value {
    @apply text-3xl font-bold mb-1;
  }
  
  .stat-label {
    @apply text-sm text-gray-500;
  }
  
  .stat-change {
    @apply text-xs font-medium mt-1;
  }
  
  .stat-increase {
    @apply text-green-600;
  }
  
  .stat-decrease {
    @apply text-red-600;
  }
  
  /* Professional Table Components */
  .table-container {
    @apply overflow-hidden rounded-lg border border-gray-200;
  }
  
  .table-professional {
    @apply w-full border-collapse bg-white;
  }
  
  .table-header {
    @apply bg-gray-50;
  }
  
  .table-header th {
    @apply px-6 py-4 text-left text-xs font-semibold text-gray-900 uppercase tracking-wider border-b border-gray-200;
  }
  
  .table-body tr {
    @apply border-b border-gray-100 hover:bg-gray-50 transition-colors duration-150;
  }
  
  .table-body td {
    @apply px-6 py-4 text-sm text-gray-900;
  }
  
  /* Professional Modal Components */
  .modal-backdrop {
    @apply fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4;
    backdrop-filter: blur(4px);
  }
  
  .modal-content {
    @apply bg-white rounded-xl shadow-professional-xl max-w-md w-full p-6 transform transition-all duration-200;
  }
  
  .modal-header {
    @apply flex items-center justify-between mb-4;
  }
  
  .modal-title {
    @apply text-lg font-semibold text-gray-900;
  }
  
  .modal-close {
    @apply text-gray-400 hover:text-gray-600 transition-colors duration-150;
  }
  
  .modal-body {
    @apply mb-6;
  }
  
  .modal-footer {
    @apply flex justify-end space-x-3;
  }
  
  /* Professional Alert Components */
  .alert {
    @apply p-4 rounded-lg border flex items-start space-x-3;
  }
  
  .alert-success {
    @apply bg-green-50 border-green-200 text-green-800;
  }
  
  .alert-warning {
    @apply bg-yellow-50 border-yellow-200 text-yellow-800;
  }
  
  .alert-error {
    @apply bg-red-50 border-red-200 text-red-800;
  }
  
  .alert-info {
    @apply bg-blue-50 border-blue-200 text-blue-800;
  }
  
  .alert-icon {
    @apply text-xl flex-shrink-0 mt-0.5;
  }
  
  .alert-content {
    @apply flex-1;
  }
  
  .alert-title {
    @apply font-semibold mb-1;
  }
  
  .alert-message {
    @apply text-sm;
  }
  
  /* Professional Loading Components */
  .loading-spinner {
    @apply animate-spin rounded-full border-2 border-gray-200 border-t-blue-600;
  }
  
  .loading-dots {
    @apply flex space-x-1;
  }
  
  .loading-dot {
    @apply w-2 h-2 bg-blue-600 rounded-full animate-pulse;
  }
  
  .loading-skeleton {
    @apply bg-gray-200 rounded animate-pulse;
  }
  
  /* Professional Image Components */
  .image-thumbnail {
    @apply rounded-lg border border-gray-200 overflow-hidden shadow-sm hover:shadow-md transition-all duration-200;
  }
  
  .image-preview {
    @apply object-cover transition-transform duration-200 hover:scale-105;
  }
  
  /* Professional Gradient Backgrounds */
  .gradient-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }
  
  .gradient-success {
    background: linear-gradient(135deg, #84fab0 0%, #8fd3f4 100%);
  }
  
  .gradient-warning {
    background: linear-gradient(135deg, #ffeaa7 0%, #fab1a0 100%);
  }
  
  .gradient-danger {
    background: linear-gradient(135deg, #fd79a8 0%, #e84393 100%);
  }
  
  /* Professional Animation Classes */
  .animate-fade-in {
    animation: fadeIn 0.5s ease-in-out;
  }
  
  .animate-slide-up {
    animation: slideUp 0.3s ease-out;
  }
  
  .animate-bounce-in {
    animation: bounceIn 0.6s ease-out;
  }
  
  .animate-scale-in {
    animation: scaleIn 0.3s ease-out;
  }
}

@layer utilities {
  /* Professional Text Utilities */
  .text-professional {
    @apply text-gray-700 leading-relaxed;
  }
  
  .heading-professional {
    @apply text-gray-900 font-semibold tracking-tight;
  }
  
  .subheading-professional {
    @apply text-gray-600 font-medium;
  }
  
  /* Professional Spacing Utilities */
  .section-padding {
    @apply py-12 px-6;
  }
  
  .container-professional {
    @apply max-w-7xl mx-auto px-4 sm:px-6 lg:px-8;
  }
  
  /* Professional Border Utilities */
  .border-professional {
    @apply border border-gray-200;
  }
  
  .border-dashed-professional {
    @apply border-2 border-dashed border-gray-300;
  }
  
  /* Professional Focus Utilities */
  .focus-ring-professional {
    @apply focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2;
  }
  
  /* Professional Hover Utilities */
  .hover-lift {
    @apply transition-transform duration-200 hover:transform hover:scale-105;
  }
  
  .hover-glow {
    @apply transition-shadow duration-200 hover:shadow-professional-lg;
  }
}

/* Custom Scrollbar Styles */
::-webkit-scrollbar {
  width: 6px;
  height: 6px;
}

::-webkit-scrollbar-track {
  background: #f8fafc;
  border-radius: 3px;
}

::-webkit-scrollbar-thumb {
  background: #cbd5e1;
  border-radius: 3px;
  transition: background 0.2s ease;
}

::-webkit-scrollbar-thumb:hover {
  background: #94a3b8;
}

::-webkit-scrollbar-corner {
  background: #f8fafc;
}

/* Professional Animation Keyframes */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-4px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(16px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes bounceIn {
  0% {
    opacity: 0;
    transform: scale(0.3);
  }
  50% {
    opacity: 1;
    transform: scale(1.05);
  }
  70% {
    transform: scale(0.9);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes scaleIn {
  from {
    opacity: 0;
    transform: scale(0.95);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes shimmer {
  0% {
    background-position: -468px 0;
  }
  100% {
    background-position: 468px 0;
  }
}

.loading-shimmer {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 400% 100%;
  animation: shimmer 1.2s ease-in-out infinite;
}

/* Professional Print Styles */
@media print {
  .no-print {
    display: none !important;
  }
  
  .print-only {
    display: block !important;
  }
  
  body {
    @apply bg-white text-gray-900;
  }
  
  .card {
    @apply shadow-none border border-gray-300;
  }
}

/* Professional Dark Mode Support (Optional) */
@media (prefers-color-scheme: dark) {
  .dark-mode-support {
    @apply bg-gray-900 text-gray-100;
  }
  
  .dark-mode-support .card {
    @apply bg-gray-800 border-gray-700;
  }
  
  .dark-mode-support .form-input {
    @apply bg-gray-800 border-gray-600 text-gray-100;
  }
}

/* Professional Responsive Breakpoint Indicators (Development Only) */
.debug-breakpoints::before {
  content: 'xs';
  @apply fixed top-0 right-0 bg-red-500 text-white px-2 py-1 text-xs font-mono z-50;
}

@screen sm {
  .debug-breakpoints::before {
    content: 'sm';
    @apply bg-orange-500;
  }
}

@screen md {
  .debug-breakpoints::before {
    content: 'md';
    @apply bg-yellow-500;
  }
}

@screen lg {
  .debug-breakpoints::before {
    content: 'lg';
    @apply bg-green-500;
  }
}

@screen xl {
  .debug-breakpoints::before {
    content: 'xl';
    @apply bg-blue-500;
  }
}

@screen 2xl {
  .debug-breakpoints::before {
    content: '2xl';
    @apply bg-purple-500;
  }
}

/* Professional Selection Styles */
::selection {
  @apply bg-blue-500 text-white;
}

::-moz-selection {
  @apply bg-blue-500 text-white;
}

/* Professional Focus Visible Styles */
:focus-visible {
  @apply outline-none ring-2 ring-blue-500 ring-offset-2;
}

/* Professional Reduced Motion Support */
@media (prefers-reduced-motion: reduce) {
  * {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}